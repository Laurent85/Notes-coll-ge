                    <GradientStop Offset="0.5" Color="#FFEBEBEB" />
                    <GradientStop Offset="0.5" Color="#FFDDDDDD" />
                    <GradientStop Offset="1" Color="#FF48A248" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="Moyenne_générale"
                 Width="93"
                 Height="23"
                 Margin="321,330,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 HorizontalContentAlignment="Center"
                 Background="#FFF4FB60"
                 FontFamily="Comic Sans MS"
                 FontSize="13"
                 FontWeight="Bold"
                 Foreground="#FFF00000"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
        <TextBox x:Name="Moyenne_générale_classe"
                 Width="93"
                 Height="23"
                 Margin="321,358,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 HorizontalContentAlignment="Center"
                 Background="#FFF4FB60"
                 FontFamily="Comic Sans MS"
                 FontSize="13"
                 FontWeight="Bold"
                 Foreground="#FFF00000"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
        <Label x:Name="Titre"
               Width="200"
               Margin="197,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Résultats scolaires"
               FontFamily="Comic Sans MS"
               FontSize="20"
               FontWeight="Bold"
               Foreground="#FF5D8CF0"
               TextOptions.TextHintingMode="Animated" />
        <Label x:Name="Trimestre1"
               Width="120"
               Margin="100,209,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="1er trimestre"
               FontSize="14"
               FontStyle="Italic"
               Foreground="#FFAA2680" />
        <Label x:Name="Trimestre2"
               Width="120"
               Margin="251,209,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="2ème trimestre"
               FontSize="14"
               FontStyle="Italic"
               Foreground="#FFAA2680" />
        <Label x:Name="Trimestre3"
               Width="120"
               Margin="399,209,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="3ème trimestre"
               FontSize="14"
               FontStyle="Italic"
               Foreground="#FFAA2680" />
        <Label x:Name="Moy1"
               Margin="118,240,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FF7B8897" />
        <Label x:Name="Moy2"
               Margin="276,240,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FF7B8897" />
        <Label x:Name="Moy3"
               Margin="426,240,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FF7B8897" />
        <Label x:Name="Moy1_classe"
               Margin="118,271,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FFEC9C10" />
        <Label x:Name="Moy2_classe"
               Margin="276,271,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FFEC9C10" />
        <Label x:Name="Moy3_classe"
               Margin="426,271,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontFamily="Comic Sans MS"
               FontWeight="Bold" Foreground="#FFEC9C10" />
        <Label x:Name="Moyenne_générale1"
               Width="139"
               Height="50"
               Margin="167,315,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               VerticalContentAlignment="Center"
               Content="Moyenne générale"
               FontSize="14"
               FontStyle="Italic"
               FontWeight="Bold"
               Foreground="#FFAA2680" />
        <Label x:Name="Moyenne_générale1_Copy"
               Width="139"
               Height="60"
               Margin="167,340,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               VerticalContentAlignment="Center"
               Content="Moyenne de classe"
               FontSize="14"
               FontStyle="Italic"
               FontWeight="Bold"
               Foreground="#FFAA2680" />
        <Label x:Name="élève"
               Margin="20,240,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Elève"
               FontFamily="Comic Sans MS"
               FontStyle="Italic"
               Foreground="#FFAA2680" />
        <Label x:Name="classe1"
               Margin="20,271,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Classe"
               FontFamily="Comic Sans MS"
               FontStyle="Italic"
               Foreground="#FFAA2680" />
        <Image x:Name="Photo"
               Width="100"
               Height="100"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Stretch="UniformToFill" />
        <Grid Width="587"
              Height="168"
              Margin="532,30,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="#FFA9F0BC">
            <DockPanel Margin="0,0,5,-159" LastChildFill="True">
                <charting:Chart DockPanel.Dock="Bottom">
                    <charting:LineSeries x:Name="moyenne_élève"
                                         Title="Elève"
                                         DependentValuePath="Moyenne"
                                         IndependentValuePath="Trimestre"
                                         ItemsSource="{Binding Data}">
                        <charting:LineSeries.DependentRangeAxis>
                            <charting:LinearAxis Title="Moyenne élève"
                                                 Maximum="20"
                                                 Minimum="10"
                                                 Orientation="Y"
                                                 ShowGridLines="True" />
                        </charting:LineSeries.DependentRangeAxis>
                        <charting:LineSeries.Template>
                            <ControlTemplate TargetType="charting:LineSeries">
                                <Canvas x:Name="PlotArea">
                                    <Polyline x:Name="polyline"
                                          Points="{TemplateBinding Points}"
                                          Stroke="Red"
                                          Style="{TemplateBinding PolylineStyle}" />
                                </Canvas>
                            </ControlTemplate>
                        </charting:LineSeries.Template>
                    </charting:LineSeries>
                    <charting:LineSeries x:Name="moyenne_classe"
                                         Title="Classe"
                                         DependentValuePath="Moyenne_classe"
                                         IndependentValuePath="Trimestre"
                                         ItemsSource="{Binding Data_classe}" />
                    <charting:AreaSeries Title="Elève"
                                         DependentValueBinding="{Binding Moyenne}"
                                         IndependentValueBinding="{Binding Trimestre}"
                                         ItemsSource="{Binding Data}">
                        <charting:AreaSeries.DataPointStyle>
                        <Style TargetType="charting:DataPoint">
                            <Setter Property="Background" Value="Red" />
                        </Style>
                    </charting:AreaSeries.DataPointStyle>
                    </charting:AreaSeries>
                    <charting:AreaSeries Title="Classe"
                                         DependentValueBinding="{Binding Moyenne_classe}"
                                         IndependentValueBinding="{Binding Trimestre}"
                                         ItemsSource="{Binding Data_classe}">
                        <charting:AreaSeries.DependentRangeAxis>
                            <charting:LinearAxis Maximum="20"
                                                 Minimum="10"
                                                 Orientation="Y"
                                                 ShowGridLines="True" />
                        </charting:AreaSeries.DependentRangeAxis>
                    </charting:AreaSeries>
                </charting:Chart>
            </DockPanel>
        </Grid>
    </Grid>
</Window>